<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] | Tracker Barrel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Issue tracker" name="description" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/img/favicon_io/favicon.ico">

    <!-- App css -->

    <link href="~/adminto/assets/css/app.min.css" rel="stylesheet" type="text/css" id="app-style" />

    <!-- icons -->
    <link href="~/adminto/assets/css/icons.min.css" rel="stylesheet" type="text/css" />

</head>

<body class="loading authentication-bg authentication-bg-pattern">

    <div class="account-pages my-5">
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="text-center">
                        <a asp-controller="Home" asp-action="Landing">
                            <img src="~/img/TrackerBarrelLogo.png" alt="" height="120" class="mb-4">
                        </a>

                    </div>
                </div>
                <div class=" col-md-8 col-lg-6 col-xl-4">
                    @RenderBody()
                </div>
                <div class=" col-md-8 col-lg-6 col-xl-4">
                    <section>
                        <h3>Or use one of the Demo Accounts to log in. </h3>
                        <hr />

                        <div class="mb-1 text-center">
                            <form class="" id="account" method="post">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-8 btn-block">
                                            <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 m-2" name="demoEmail" value="DemoAdminEmail">Demo Admin</button>
                                            <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 m-2" name="demoEmail" value="DemoPMEmail">Demo PM</button>
                                            <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 m-2" name="demoEmail" value="DemoDevEmail">Demo Developer</button>
                                            <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 m-2" name="demoEmail" value="DemoSubEmail">Demo Submitter</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </section>
                </div>



            </div>

        </div>
        <!-- end container -->
    </div>
    <!-- end page -->
    <!-- Vendor -->
    <script src="~/adminto/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/adminto/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminto/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/adminto/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/adminto/assets/libs/waypoints/lib/jquery.waypoints.min.js"></script>
    <script src="~/adminto/assets/libs/jquery.counterup/jquery.counterup.min.js"></script>
    <script src="~/adminto/assets/libs/feather-icons/feather.min.js"></script>

    <!-- App js -->
    <script src="~/adminto/assets/js/app.min.js"></script>


    @await RenderSectionAsync("scripts", required:false)
</body>
</html>

