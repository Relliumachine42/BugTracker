@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@using X.PagedList;
@model IPagedList<BugTracker.Models.Ticket>
@inject IBTFileService _fileService

@{
    ViewData["Title"] = "Index";
    string? searchString = ViewBag.SearchString;
    string? actionName = ViewBag.ActionName;
    string? category = ViewBag.Category;
}

<!-- body start -->
<body class="loading" data-layout-color="light" data-layout-mode="default" data-layout-size="fluid" data-topbar-color="light" data-leftbar-position="fixed" data-leftbar-color="light" data-leftbar-size='default' data-sidebar-user='true'>

    <!-- Begin page -->
    <div id="wrapper">


        <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->

        <div class="content">

            <!-- Start Content-->
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row justify-content-between">
                                    <div class="col-md-4">
                                        <div class="mt-3 mt-md-0">
                                            <a class="btn btn-success waves-effect waves-light" asp-controller="Tickets" asp-action="Create"><i class="mdi mdi-plus-circle me-1"></i> Add ticket</a>
                                        </div>
                                    </div><!-- end col-->
                                    <div class="col-md-8">
                                        <form class="d-flex flex-wrap align-items-center justify-content-sm-end">
                                            <label for="status-select" class="me-2">Sort By</label>
                                            <div class="me-sm-2">
                                                <select class="form-select my-1 my-md-0" id="status-select">
                                                    <option selected="">All</option>
                                                    <option value="1">Name</option>
                                                    <option value="2">Post</option>
                                                    <option value="3">Followers</option>
                                                    <option value="4">Followings</option>
                                                </select>
                                            </div>
                                            <label for="inputPassword2" class="visually-hidden">Search</label>
                                            <div>
                                                <input type="search" class="form-control my-1 my-md-0" id="inputPassword2" placeholder="Search...">
                                            </div>
                                        </form>
                                    </div>
                                </div> <!-- end row -->
                            </div>
                        </div> <!-- end card -->
                    </div><!-- end col-->
                </div>
                <!-- end row -->
                <div class="row">
                    @foreach (Ticket ticket in Model)
                    {
                        <div class="col-xl-4">


                            <div class="card">
                                <div class="text-center card-body">
                                    <div class="dropdown float-end">
                                        <a href="#" class="dropdown-toggle arrow-none card-drop" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="mdi mdi-dots-vertical"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-end">
                                            <!-- item-->
                                            <a asp-action="AssignTicket" asp-route-id="@ticket.Id" class="dropdown-item">Assign</a>
                                            <!-- item-->
                                            <a asp-action="Edit" asp-route-id="@ticket.Id" class="dropdown-item">Edit</a>
                                            <!-- item-->
                                            @if (ticket.Archived == false)
                                            {
                                                <a class="dropdown-item" asp-action="Delete" asp-route-id="@ticket.Id">Delete</a>
                                            }
                                            else
                                            {
                                                <a class="dropdown-item" asp-action="Undelete" asp-route-id="@ticket.Id">Undelete</a>
                                            }
                                        </div>
                                    </div>
                                    <div>
                                        <img src="@_fileService.ConvertByteArrayToFile(ticket.Project.ImageData,ticket.Project.ImageType,DefaultImage.ProjectImage)" class="rounded-circle avatar-xl img-thumbnail mb-2" alt="profile-image">
                                        <h5>@ticket.Title</h5>
                                        <p class="text-muted text-truncate d-block font-13 mb-3" style="overflow:hidden;">
                                            @ticket.Description
                                        </p>

                                        <div class="text-start">
                                            <p class="text-muted font-13"><strong>Submitter Name:</strong> <span class="ms-2">@ticket.SubmitterUser.FullName</span></p>

                                            <p class="text-muted font-13"><strong>Priority:</strong><span class="ms-2">@ticket.TicketPriority.Name</span></p>

                                            <p class="text-muted font-13"><strong>Type:</strong> <span class="ms-2">@ticket.TicketType.Name</span></p>

                                            @if (ticket.Archived == true || ticket.ArchivedByProject == true)
                                            {
                                                <p class="text-danger font-13 text-center"><strong>Archived</strong></p>
                                            } else
                                            {
                                            <p class="text-muted font-13"><strong>Status:</strong> <span class="ms-2">@ticket.TicketStatus.Name</span></p>
                                                
                                            }

                                        </div>

                                        <a asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-primary rounded-pill waves-effect waves-light">Details</a>
                                    </div>
                                </div>
                            </div>

                        </div> <!-- end col -->
                    }
                    <div>
                        <div>
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                        </div>
                        @Html.PagedListPager(Model, pageNum => Url.Action(actionName, new { pageNum, searchString, category}),
                        new PagedListRenderOptions
                        {
                        LiElementClasses = new string[] {"my-page-item"},
                        PageClasses = new string[] {"my-page-link" }
                        })

                    </div>

                </div>
                <!-- end row -->

            </div> <!-- container -->

        </div> <!-- content -->
        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->


    </div>
    <!-- END wrapper -->
    <!-- Vendor -->
    <script src="assets/libs/jquery/jquery.min.js"></script>
    <script src="assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/libs/simplebar/simplebar.min.js"></script>
    <script src="assets/libs/node-waves/waves.min.js"></script>
    <script src="assets/libs/waypoints/lib/jquery.waypoints.min.js"></script>
    <script src="assets/libs/jquery.counterup/jquery.counterup.min.js"></script>
    <script src="assets/libs/feather-icons/feather.min.js"></script>

    <!-- App js -->
    <script src="assets/js/app.min.js"></script>

</body>